/* Main container acts as a vertical column between Header and Footer */
#app-grid {
    layout: vertical;
    height: 1fr; /* Fill available space */
}

/* --- Top Section Layout --- */
#top-split {
    height: 1fr; /* Take all remaining height not used by the player */
}

#browser {
    width: 2fr;  /* Take 2 parts of width (approx 66%) */
    border: solid green; /* Visual guide, remove later */
    background: $panel;
}

#art {
    width: 1fr;  /* Take 1 part of width (approx 33%) */
    border: solid blue; /* Visual guide, remove later */
    background: $panel;
}

/* --- Bottom Section Layout --- */
#player {
    height: 10;  /* Fixed height for controls */
    border: solid red; /* Visual guide, remove later */
    background: $surface;
}

/* Specific styles for Browser contents */
#search-box {
    dock: top;
    height: 3;
    margin-bottom: 1;
}

#results-table {
    height: 1fr; /* Fill the rest of the browser pane */
    border: none;
}

/* ... Top section CSS stays the same ... */

/* --- Bottom Section Layout --- */
#player {
    height: 12;         /* Give it enough height for Label + Buttons */
    dock: bottom;
    background: $surface;
    border-top: solid $primary;
    padding: 1;
}

#track-info {
    text-align: center;
    width: 100%;
    content-align: center middle;
    text-style: bold;
    margin-bottom: 1;
}

#controls {
    height: auto;
    width: auto;
}

Button {
    margin: 0 1; /* Add space between buttons */
    min-width: 16;
}

/* ... existing css ... */

#art {
    width: 1fr;
    border: solid blue; /* Keep border for now to see boundaries */
    background: $panel;
    /* Ensure containers inside align nicely */
    align: center middle;
    overflow: hidden; /* Hide overflow if ASCII is too big */
}

/* Fix text alignment inside the ASCII display area */
#art-display {
     text-align: center;
}

#progress-container {
    height: 1;
    width: 80%; /* Adjust total width of the progress area */
    align: center middle;
    margin-bottom: 1;
}

#time-current, #time-total {
    width: 6; /* Fixed width prevents jitter when digits change (0:09 -> 0:10) */
    text-align: center;
    color: $text-muted;
}

#progress-bar {
    width: 1fr; /* Fill remaining space between the two labels */
    margin: 0 1; /* Small gap between text and bar */
}